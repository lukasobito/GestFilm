@model GestFilm.Models.Data.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Détails</h1>

<div>
    <h4>Soirée Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom de la soirée film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Nom du film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateEvent)
        </dd>
        <dt class="col-sm-2">
            Film validé ?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFilmValid)
        </dd>
        <dt class="col-sm-2">
            Date validé ?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDateValid)
        </dd>
        <dt class="col-sm-2">
            Id du groupe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupId)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editer", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Retour à la liste des soirées film</a>
</div>
