@model GestFilm.Web.Models.Search

@{
    ViewData["Title"] = "Search";
}

<h1>Ajouter un nouveau membre au groupe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="value" class="control-label">Pseudo du membre</label>
                <input asp-for="value" class="form-control" />
                <span asp-validation-for="value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rechercher" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="List" asp-route-idGroup=@ViewBag.Message>Retour aux membres du groupes</a>
</div>
@if (Model.users is null)
{
    <p>Votre recherche ne donne aucun résultat</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Prénom
                </th>
                <th>
                    Login
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.ActionLink("Ajouter l'utilisateur", "AddUser", new { id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

